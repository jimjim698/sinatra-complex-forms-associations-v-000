<h1>Update Pet</h1>

<form class="" action="/pets/<%=@pet.id%>" method="post">
  <input type="hidden" name="_method" value="hidden">
  <br></br>
  <label>Name:</label>
  <input type="text" name="pet[name]" value="<%=@pet.name%>">
  <br></br>

  <label>Choose an existing owner: </label>
  <br></br>
  <%Owner.all.each do |owner|%>
  <input type="checkbox" name="owner[name]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></input>
<%end%



</form>
